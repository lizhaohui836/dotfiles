# fn + option + f1/f2 opens settings/display

# apple script editor
do shell script "/Applications/Google\\ Chrome.app/Contents/MacOS/Google\\ Chrome --user-data-dir=/private/tmp/ramdisk > /dev/null 2>&1 &"